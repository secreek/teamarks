{
"manifest_version": 2,
"name": "Share this Page",
"version": "0.2",
"description": "This extension adds a sharing button to the toolbar which allows you to share the page link with your team.",
"icons": {
	"64": "shareicon_64x64.png"
},
"background": {
	"scripts": ["background.js"]
},
"browser_action": {
	"default_icon": "shareicon_64x64.png",
	"default_title": "Share this Page"
},
"options_page": "options.html",
"permissions": [ "tabs", "http://*/*", "https://*/*", "http://api.teamarks.com/", "https://api.teamarks.com/" ]
}
