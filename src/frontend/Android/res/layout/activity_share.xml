<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_share_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="62dp"
        android:text="@string/share_title"
        tools:context=".ShareActivity" />

    <EditText
        android:id="@+id/et_share_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_share_title"
        android:layout_below="@+id/tv_share_title"
        android:ems="10" 
    		android:inputType="text"/>    
    		
    	<TextView
        android:id="@+id/tv_share_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_share_title"
        android:layout_below="@+id/et_share_title"
        android:layout_marginTop="23dp"
        android:text="@string/share_link" />

    <EditText
        android:id="@+id/et_share_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_share_link"
        android:layout_below="@+id/tv_share_link"
        android:ems="10" 
         android:inputType="textMultiLine">

 
    </EditText>

        <TextView
        android:id="@+id/tv_share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_share_text"
        android:layout_below="@+id/et_share_link"
        android:layout_marginTop="43dp"
        android:text="@string/share_text" 
       />
    
    <EditText
        android:id="@+id/et_share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_share_link"
        android:layout_below="@+id/et_share_link"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:inputType="textMultiLine">
        <requestFocus/>      
    </EditText>

    <Button
        android:id="@+id/bt_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/et_share_text"
        android:layout_marginBottom="52dp"
        android:text="@string/bt_share" />

</RelativeLayout>
